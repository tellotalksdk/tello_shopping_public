<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settingprofileediting.SettingProfileEditingActivity">


    <RelativeLayout
        android:id="@+id/mainHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_bg_color">

        <LinearLayout
            android:id="@+id/shopsetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:paddingBottom="2dp"
                android:src="@drawable/ic_baseline_arrow_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_toRightOf="@+id/iv_back"
                android:paddingBottom="3dp"
                android:text="Store Settings"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="normal" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shopsetting"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            tools:ignore="NotSibling">

            <ImageView
                android:id="@+id/iv_profile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_avatar" />

            <LinearLayout
                android:id="@+id/head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/iv_profile"
                android:orientation="vertical">

                <EditText
                    android:background="@android:color/transparent"
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Khurram Shehzad"
                    android:textColor="@android:color/black"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/online_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Online"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:textStyle="normal" />

                <ImageView
                    android:id="@+id/iv_star"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/ic_baseline_star" />

                <TextView
                    android:id="@+id/rating_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="4.9"
                    android:textColor="@android:color/black"
                    android:textSize="17sp"
                    android:textStyle="normal" />


            </LinearLayout>

            <ImageView
                android:id="@+id/iv_edit"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:padding="3dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_edit" />

        </RelativeLayout>

    </RelativeLayout>

    <!--  <com.google.android.material.tabs.TabLayout
          android:visibility="gone"
          android:layout_below="@+id/mainHead"
          android:layout_height="wrap_content"
          android:layout_width="match_parent">

          <com.google.android.material.tabs.TabItem
              android:id="@+id/tab1"
              android:layout_width="wrap_content"
              android:layout_height="?actionBarSize"
              android:text="Personal Info"/>

          <com.google.android.material.tabs.TabItem
              android:id="@+id/tab2"
              android:layout_width="wrap_content"
              android:layout_height="?actionBarSize"
              android:text="Store Settings"/>

          <com.google.android.material.tabs.TabItem
              android:id="@+id/tab3"
              android:layout_width="wrap_content"
              android:layout_height="?actionBarSize"
              android:text="Bank"/>


      </com.google.android.material.tabs.TabLayout>-->


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mainHead"
        app:tabGravity="fill"
        app:tabIndicatorColor="#64DCCF"
        app:tabMaxWidth="0dp"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@android:color/darker_gray"
        app:tabTextAppearance="@style/MyCustomTextAppearance"
        app:tabTextColor="@android:color/black">


        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Store Settings" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Banks" />

    </com.google.android.material.tabs.TabLayout>


    <LinearLayout
        android:id="@+id/tabbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/mainHead"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/personalInfoRL"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_personal"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="Personal Info"
                android:textColor="#50D4BF" />

            <View
                android:id="@+id/horizontalLine1"
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@android:color/darker_gray" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/storeSettingRL"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_storesettings"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="Store Settings"
                android:textColor="@android:color/black" />

            <View
                android:id="@+id/horizontalLine2"
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@android:color/darker_gray"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bankRL"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_bank"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="Bank"
                android:textColor="@android:color/black" />

            <View
                android:id="@+id/horizontalLine3"
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@android:color/darker_gray"
                android:visibility="gone" />

        </RelativeLayout>

    </LinearLayout>


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tab1"
        android:layout_marginTop="10dp"
        app:defaultNavHost="true"
        app:navGraph="@navigation/nav_graph_editing">


    </androidx.fragment.app.FragmentContainerView>

</RelativeLayout>