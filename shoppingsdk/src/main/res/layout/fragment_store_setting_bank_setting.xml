<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/RL1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_setuppayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Setup Payment"
            android:textColor="#535353"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/you"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_setuppayment"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:text="You haven't set payment method yet"
            android:textColor="#9F9F9F"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_wallet"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_below="@+id/you"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"
            android:background="@drawable/bg_rounded_wallet_button"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Wallet" />

        <Button
            android:id="@+id/btn_bank"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_below="@+id/btn_wallet"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_rounded_wallet_button"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Bank" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RL2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_addbankdetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Add Bank Details"
            android:textColor="#535353"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/you2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_addbankdetails"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:text="Add bank detail and link with us"
            android:textColor="#9F9F9F"
            android:textSize="14sp"
            android:textStyle="bold" />


        <Spinner
            android:id="@+id/spinner_bank_names"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/you2"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/edit_text_bg_color" />

        <EditText
            android:id="@+id/account_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/spinner_bank_names"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/edit_text_bg_color"
            android:paddingLeft="10dp"
            android:text="* Account Title"
            android:textSize="15sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/account_title"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/edit_text_bg_color"
            android:paddingLeft="10dp"
            android:text="* Account Number"
            android:textSize="15sp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RL3"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/addressRL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LL3"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/edit_text_bg_color"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <LinearLayout
                android:id="@+id/leftLLlabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:text="Bank :" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:text="Account Title :" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:text="Account # " />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/middleLL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/leftLLlabel"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:text="11-E DHA street"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:text="Karachi"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:text="Sindh"
                    android:textColor="@android:color/black" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/LL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="right|bottom"
                    android:layout_marginRight="10dp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="right|bottom"
                    android:layout_marginRight="10dp" />

                <ImageView
                    android:id="@+id/ic_delete"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="right|bottom"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_baseline_delete" />

            </LinearLayout>



        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/addressRL"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/edit_text_bg_color"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_baseline_add_circle_outline" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/addressRL"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/edit_text_bg_color"
                android:text="Add New Address"
                android:textColor="@android:color/black"
                android:textStyle="bold">

            </TextView>
        </LinearLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/continue_btn"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_below="@+id/insertDigit"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_btn"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:text="Continue"
        android:textColor="#EAEFF3" />

</RelativeLayout>