            <ImageView
                android:id="@+id/iv_back1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignTop="@+id/tv_addwalletdetails"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="5dp"
                android:layout_toLeftOf="@+id/tv_addwalletdetails"
                android:src="@drawable/ic_baseline_arrow_back" />

            <TextView
                android:id="@+id/tv_addwalletdetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="Add Wallet Details"
                android:textColor="#535353"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/you3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_addwalletdetails"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:text="Add wallet detail and link with us"
                android:textColor="#9F9F9F"
                android:textSize="14sp"
                android:textStyle="bold" />


            <Spinner
                android:id="@+id/spinner_wallet_names"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/you3"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/bg_spinner" />

            <EditText
                android:id="@+id/account_title_wallet"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/spinner_wallet_names"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edit_text_bg_color"
                android:hint="* Account Title"
                android:maxLength="24"
                android:paddingLeft="10dp"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/account_mobile_number"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/account_title_wallet"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edit_text_bg_color"
                android:hint="* Mobile Number"
                android:maxLength="12"
                android:paddingLeft="10dp"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/account_cnic"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/account_mobile_number"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edit_text_bg_color"
                android:hint="* CNIC"
                android:inputType="number"
                android:maxLength="12"
                android:paddingLeft="10dp"
                android:textSize="15sp" />

            <Button
                android:id="@+id/continue_btn_RL4"
