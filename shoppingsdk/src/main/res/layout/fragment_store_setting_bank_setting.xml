<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


        <RelativeLayout
            android:id="@+id/RL1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">


            <TextView
                android:id="@+id/tv_setuppayment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="Setup Payment"
                android:textColor="#535353"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/you"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_setuppayment"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:text="You haven't set payment method yet"
                android:textColor="#9F9F9F"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_wallet"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_below="@+id/you"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:background="@drawable/bg_rounded_wallet_button"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Wallet" />

            <Button
                android:id="@+id/btn_bank"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_below="@+id/btn_wallet"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_rounded_wallet_button"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Bank" />



            <Button
                android:id="@+id/continue_btn_RL1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_btn"
                android:paddingLeft="60dp"
                android:paddingRight="60dp"
                android:text="Continue"
                android:textColor="@android:color/white" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RL2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignTop="@+id/tv_addbankdetails"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="5dp"
                android:layout_toLeftOf="@+id/tv_addbankdetails"
                android:src="@drawable/ic_baseline_arrow_back" />

            <TextView
                android:id="@+id/tv_addbankdetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="Add Bank Details"
                android:textColor="#535353"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/you2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_addbankdetails"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:text="Add bank detail and link with us"
                android:textColor="#9F9F9F"
                android:textSize="14sp"
                android:textStyle="bold" />


            <Spinner
                android:id="@+id/spinner_bank_names"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/you2"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/bg_spinner" />

            <EditText
                android:id="@+id/account_title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/spinner_bank_names"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edit_text_bg_color"
                android:hint="* Account Title"
                android:maxLength="12"
                android:paddingLeft="10dp"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/account_number"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/account_title"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edit_text_bg_color"
                android:hint="* Account Number"
                android:inputType="number"
                android:maxLength="24"
                android:paddingLeft="10dp"
                android:textSize="15sp" />

            <Button
                android:id="@+id/continue_btn_RL2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/bottomLine"
                android:layout_centerHorizontal="true"
                android:layout_gravity="bottom"
                android:layout_marginTop="200dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rounded_btn"
                android:paddingLeft="60dp"
                android:paddingRight="60dp"
                android:text="Continue"
                android:textColor="@android:color/white" />

            <View
                android:layout_alignParentBottom="true"
                android:id="@+id/bottomLine"
                android:layout_width="match_parent"
                android:layout_height="10dp"/>




        </RelativeLayout>

