<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/top_rounded_corners_40dp">


        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/mainHead"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_baseline_arrow_back" />

        <TextView
            android:id="@+id/mainHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif"
            android:text="Shop Registration"
            android:textColor="#4E4E4E"
            android:textSize="22sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/subHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mainHead"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:fontFamily="sans-serif"
            android:text="Setup your shop to proceed next"
            android:textColor="#4E4E4E"
            android:textSize="12sp"
            android:textStyle="normal" />

        <androidx.cardview.widget.CardView
            android:id="@+id/user"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/subHead"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_user_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:padding="5dp"
                    android:src="@drawable/ic_avatar" />

                <EditText
                    android:id="@+id/userShopname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15sp"
                    android:layout_toRightOf="@+id/iv_user_image"
                    android:background="@android:color/transparent"
                    android:ellipsize="end"
                    android:enabled="false"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:text="Khurram Shehzad"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/iv_editImage"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/ic_baseline_edit" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/LL1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="3dp"
                    android:alpha="0"
                    android:paddingBottom="5dp"
                    android:text="shop name"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="sans-serif"
                    android:text="* only alphanumeric characters allow."
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="8dp"
                    android:textStyle="normal" />

            </RelativeLayout>

            <EditText
                android:id="@+id/et_shop_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edit_text_bg_color"
                android:hint="* Shop Name"
                android:maxLength="25"
                android:maxLines="1"
                android:inputType="textVisiblePassword"
                android:paddingLeft="10dp"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/leftRl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/store_name_link_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mainHead"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="7dp"
                        android:fontFamily="sans-serif"
                        android:text="Dummy-store."
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/store_name_link_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mainHead"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="7dp"
                        android:fontFamily="sans-serif"
                        android:text="tello.pk"
                        android:textColor="#5580D6"
                        android:textSize="12sp"
                        android:textStyle="normal" />

                </LinearLayout>


            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="14">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spinner_operator"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="3"
                    android:background="@drawable/edit_text_bg_color"
                    android:entries="@array/network_options" />


                <EditText
                    android:id="@+id/d1"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_bg_color"
                    android:enabled="true"
                    android:gravity="center"
                    android:imeOptions="actionPrevious"
                    android:inputType="number"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/d2"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_bg_color"
                    android:enabled="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:imeOptions="actionPrevious"
                    android:inputType="number"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/d3"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_bg_color"
                    android:enabled="true"
                    android:gravity="center"
                    android:imeOptions="actionPrevious"
                    android:inputType="number"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/d4"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_bg_color"
                    android:enabled="true"
                    android:gravity="center"
                    android:imeOptions="actionPrevious"
                    android:inputType="number"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/d5"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_bg_color"
                    android:enabled="true"
                    android:gravity="center"
                    android:imeOptions="actionPrevious"
                    android:inputType="number"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/d6"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_bg_color"
                    android:enabled="true"
                    android:gravity="center"
                    android:imeOptions="actionPrevious"
                    android:inputType="number"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/d7"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_bg_color"
                    android:enabled="true"
                    android:gravity="center"
                    android:imeOptions="actionPrevious"
                    android:inputType="number"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/d8"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_bg_color"
                    android:enabled="true"
                    android:gravity="center"
                    android:imeOptions="actionPrevious"
                    android:inputType="number"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/d9"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_bg_color"
                    android:enabled="true"
                    android:gravity="center"
                    android:imeOptions="actionPrevious"
                    android:inputType="number"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/d10"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_bg_color"
                    android:enabled="true"
                    android:gravity="center"
                    android:imeOptions="actionPrevious"
                    android:inputType="number"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/d11"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_bg_color"
                    android:enabled="true"
                    android:gravity="center"
                    android:imeOptions="actionPrevious"
                    android:inputType="number"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="12sp" />

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/insertDigitreflection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LL1"
            android:layout_marginStart="20sp"
            android:layout_marginTop="10sp"
            android:layout_toRightOf="@+id/your_number"
            android:text="Example 92 3XX XXX XXXX"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/your_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LL1"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20sp"
            android:layout_marginTop="10sp"
            android:text="Your Number :"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/RL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/insertDigitreflection"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            tools:ignore="UnknownId">

            <TextView
                android:id="@+id/countDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="20sp"
                android:layout_marginTop="10sp"
                android:text="in 00.26"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/requestAgain"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/countDown"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_bg_color"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Request Again"
                android:textAllCaps="false"
                android:textSize="12sp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/requestAgain"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/enterPIIN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="sans-serif"
                    android:text="Enter PIN"
                    android:textAllCaps="false"
                    android:textColor="#4E4E4E"
                    android:textSize="18sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/providedNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/enterPIIN"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="20sp"
                    android:layout_marginTop="10sp"
                    android:text="please check your inbox for OTP pin"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:id="@+id/LL3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/providedNumber"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/otp_one"
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:imeOptions="actionPrevious"
                        android:inputType="number"
                        android:maxLength="1"
                        android:maxLines="1" />

                    <EditText
                        android:id="@+id/otp_two"
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:imeOptions="actionPrevious"
                        android:inputType="number"
                        android:maxLength="1"
                        android:maxLines="1" />

                    <EditText
                        android:id="@+id/otp_three"
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:imeOptions="actionPrevious"
                        android:inputType="number"
                        android:maxLength="1"
                        android:maxLines="1" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/term"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/LL3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="By Continuing , you agree to TelloTalk's terms of use"
                        android:textColor="@android:color/black"
                        android:textSize="10sp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="Term's of Use"
                        android:textColor="#6F90D9"
                        android:textSize="12sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/term"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true">

                    <Button
                        android:id="@+id/done_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/term"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/rounded_btn_light"
                        android:paddingLeft="75dp"
                        android:paddingRight="75dp"
                        android:text="Done"
                        android:textColor="@android:color/black"
                        android:visibility="visible" />

                </LinearLayout>

            </RelativeLayout>


        </RelativeLayout>

        <Button
            android:id="@+id/requestforPin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LL1"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_btn"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:text="Request For Pin"
            android:textColor="@android:color/white"
            android:visibility="visible" />


    </RelativeLayout>
</ScrollView>
