<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/outerRL"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="@drawable/top_rounded_corners_40dp">

        <TextView
            android:id="@+id/storeTimingHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Set Store Timings"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/storeTimingHead">

            <LinearLayout
                android:id="@+id/daystimingsLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/storeTimingHead"
                android:layout_margin="15dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvMonday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="20dp"
                        android:text="Monday"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvMonday"
                        android:weightSum="2">

                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/monday_open_at"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_below="@+id/tvMonday"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="15dp"
                            android:layout_weight="1"
                            android:background="@drawable/edit_text_bg_color"
                             />

                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/monday_closed_at"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_below="@+id/tvMonday"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="15dp"
                            android:layout_weight="1"
                            android:background="@drawable/edit_text_bg_color"
                             />

                    </LinearLayout>


                    <Switch
                        android:id="@+id/monday_toggle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="right"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="18dp"
                        android:checked="false" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvTueday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="20dp"
                        android:text="Tuesday"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvTueday"
                        android:weightSum="2">

                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/tuesday_open_at"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_below="@+id/tvTueday"
