<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <layer-list>

            <item>
                <shape>
                    <gradient android:angle="90" android:endColor="#F0F1F6" android:startColor="#F0F1F6" android:type="linear" />
                    <corners android:radius="6dp" />
                    <padding android:bottom="3dp" android:left="3dp" android:right="5dp" android:top="3dp" />
                </shape>
            </item>

            <item android:right="5dp">
                <bitmap android:gravity="center_vertical|right" android:src="@drawable/ic_drop_down" />
            </item>

        </layer-list>

    </item>

</selector>