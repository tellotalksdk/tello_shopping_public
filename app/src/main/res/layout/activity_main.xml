<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/bg_rounded_white_et"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.tilismtech.tellotalk_shopping_sdk.customviews.HorizontalDottedProgress
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></com.tilismtech.tellotalk_shopping_sdk.customviews.HorizontalDottedProgress>

    <EditText
        android:layout_marginTop="-150dp"
        android:id="@+id/fName"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:hint="first Name" />


    <EditText
        android:id="@+id/mName"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:hint="middle Name"
        android:visibility="gone" />

    <EditText
        android:id="@+id/lName"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:hint="last Name"
        android:visibility="gone" />

    <EditText
        android:id="@+id/contact"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:hint="mobile number"
        android:text="03350221182" />


    <EditText
        android:id="@+id/profileid"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:hint="profile id"
        android:text="3F64D77CB1BA4A3CA6CF9B9D786D4A99" />


    <Button
        android:id="@+id/button"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Getting Started Seller" />

    <Button
        android:id="@+id/client"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Getting Started Client"
        android:visibility="gone"/>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>


</LinearLayout>